{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Package Extension",
      "type": "shell",
      "command": "vsce",
      "args": ["package"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Publish Package",
      "type": "shell",
      "command": "vsce",
      "args": ["publish", "${input:versionType}"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"]
    },
    {
      "label": "Show Package Stats",
      "type": "shell",
      "command": "vsce",
      "args": ["show", "CodeontheRocks.clibbits"],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc"]
    }
  ],
  "inputs": [
	{
		"id": "versionType",
		"type": "pickString",
		"options": [
			"major",
			"minor",
			"patch"
		],
		"default": "minor",
		"description": "Select the version type to publish"
	}
  ]
}

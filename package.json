{
  "name": "clibbits",
  "displayName": "Clibbits",
  "description": "Add and manage file-specific notes in a VS Code sidebar",
  "version": "0.5.0",
  "publisher": "CodeontheRocks",
  "icon": "clibbits.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/jtmuller5/clibbits"
  },
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onView:clibbitsNotesExplorer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "clibbits-sidebar",
          "title": "Clibbits Notes",
          "icon": "resources/clibbits-notes-icon.svg"
        }
      ]
    },
    "views": {
      "clibbits-sidebar": [
        {
          "id": "clibbitsNotesExplorer",
          "name": "File Notes"
        }
      ]
    },
    "commands": [
      {
        "command": "clibbits.addNote",
        "title": "Add Note",
        "icon": "$(add)"
      },
      {
        "command": "clibbits.deleteNote",
        "title": "Delete Note",
        "icon": "$(trash)"
      },
      {
        "command": "clibbits.editNote",
        "title": "Edit Note",
        "icon": "$(edit)"
      },
      {
        "command": "clibbits.viewNote",
        "title": "View Note"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "clibbits.addNote",
          "when": "view == clibbitsNotesExplorer",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "clibbits.deleteNote",
          "when": "view == clibbitsNotesExplorer && viewItem == fileNote",
          "group": "inline"
        },
        {
          "command": "clibbits.editNote",
          "when": "view == clibbitsNotesExplorer && viewItem == fileNote",
          "group": "inline"
        },
        {
          "command": "clibbits.viewNote",
          "when": "view == clibbitsNotesExplorer && viewItem == fileNote",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.60.0",
    "@types/node": "14.x",
    "@typescript-eslint/eslint-plugin": "^5.1.0",
    "@typescript-eslint/parser": "^5.1.0",
    "eslint": "^8.1.0",
    "typescript": "^4.4.4"
  }
}
